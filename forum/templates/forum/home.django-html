{% extends 'base.django-html' %}
{% load static %}
{% block title %} Home title {% endblock title %}
{% block addStyles %}
<link rel="stylesheet" href="{% static 'forum/forum.css' %}">
{% endblock addStyles%}

{% block content %}
    {% include 'breadcrumbs.django-html' %}
    <main class="main">
        <h1 class="head-1">TOPIC BOARDS</h1>
        <div class="controls">
            <div class="label-div">
                <label for="topic-search">Search for a topic:<label/>
                <input type="search" class="search"
                placeholder="programming" id="topic-search"/>
            </div>
            <a class="add-link hover" href="{% url 'forum:create_topic' %}">CREATE A NEW TOPIC</a>
        </div>
        <div class="topics-div">
            <ul class="topics-list">
            {% for topic in topics %}
                <li class="topics-item">
                    <a class="topic-link hover" href="{% url 'forum:topic' topic_slug=topic.slug %}">
                        {{topic.name}}</a>
                    <div class="topic-controls">
                        <a class="topic-link topic-edit hover"
                            href="{% url 'forum:topic_edit' topic_slug=topic.slug %}">EDIT</a>
                        <a class="topic-link topic-del hover"
                        href="{% url 'forum:topic_delete' topic_slug=topic.slug %}">DELETE</a>
                    </div>
                </li>
            {% endfor %}
            </ul>
            <p class="pages">1 ... N</p>
        </div>
    
    
    </main>
    <p>{{test}}</p>
{% endblock content %}